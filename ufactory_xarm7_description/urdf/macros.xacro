<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Set Link macro -->
<xacro:macro name="u_xarm7_link" params="name mesh xyz rpy">
  <link name="${name}">
    
    <visual>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <geometry>
        <mesh filename="package://ufactory_xarm7_description/meshes/${mesh}"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <geometry>
        <mesh filename="package://ufactory_xarm7_description/meshes/${mesh}"/>
      </geometry>
    </collision>

  </link>
</xacro:macro>

  <!-- Define revolute joint macro -->
  <xacro:macro name="u_xarm7_joint" params="name parent child xyz rpy axis lower upper">
    <joint name="${name}" type="revolute">
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <parent link="${parent}"/>
      <child link="${child}"/>
      <axis xyz="${axis}"/>
      <limit lower="${lower}" upper="${upper}" effort="3.0" velocity="3.14"/>
    </joint>
  </xacro:macro>

  <!-- Define mixed joint macro -->
  <xacro:macro name="u_xarm7_fixed" params="name parent child xyz rpy">
    <joint name="${name}" type="fixed">
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <parent link="${parent}"/>
      <child link="${child}"/>
    </joint>
  </xacro:macro>

</robot>
